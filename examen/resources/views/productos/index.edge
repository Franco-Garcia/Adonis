<!DOCTYPE html>
<html>  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ventas</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    {{ style('style') }}
  </head>
  <body>
  <section class="section">
    <div class="container">
    
      <h1 class="title" style="margin-left: 475px;">Productos</h1>
      <input class="button is-success is-rounded" style="margin-left: 450px;" type="button" value="Regresar" onclick="location.href='http://127.0.0.1:3333'" />
      <input class="button is-success is-rounded" type="button" value="Agregar" onclick="location.href='http://127.0.0.1:3333/productos/crear'" />
        <table class="table" style="margin-left: 250px;">
            <tr>
                <th style="width:100px; height: 20px;">Codigo</th>
                <th style="width:100px; height: 20px;">Producto</th>
                <th style="width:100px; height: 20px;">Precio</th>
                <th style="width:100px; height: 20px;">Existencia</th>
            </tr>
            <ul>
                @each(producto in productos)
                    <tr>
                        <th style="width:100px; height: 20px;">{{producto.codigo}}</th>
                        <th style="width:100px; height: 20px;">{{producto.nombre}}</th>
                        <th style="width:100px; height: 20px;">{{producto.precio}}</th>
                        <th style="width:100px; height: 20px;">{{producto.existencia}}</th>
                        <th style="width:100px; height: 20px;"><input class="button is-warning is-rounded" type="button" value="Editar" onclick="location.href='http://127.0.0.1:3333/productos/editar/{{producto.id}}'"  /></th>
                        <th style="width:100px; height: 20px;"><input class="button is-danger is-rounded" type="button" value="Eliminar" onclick="location.href='http://127.0.0.1:3333/productos/eliminar/{{producto.id}}'"  /></th>

                    </tr>
                @endeach
            </ul>
        </table>
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
         
    </div>
  </section>
<SELECT NAME="selCombo" SIZE=1 onChange="javascript:alert('prueba');"> 
<OPTION >{{Product.nombre}}</OPTION>
</SELECT> 


  </body>
</html>